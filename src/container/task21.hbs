{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}} 
        
<main>
     <div class="card">
         <div class="card-body">
        {{#with heading}}
             <div class="card">
                 <div class="card-body">
                     <h1>{{main.title}}</h1>
                         <p>{{main.text}}</p>
               <div><button class="btn btn-primary">{{main.button_text.solid}}</button></div>
               <br>
               <div><button class="btn btn-outline-primary">{{main.button_text.outline}}</button></div>
                 </div>
             </div> 
             <br>
             <div class="card">
                 <div class="card-body">
                     <h2>{{second.title}}</h2>
                         <p>{{second.text}}</p>
                <div><button class="btn btn-secondary">{{second.button_text.solid}}</button></div>
                <br>
                <div><button class="btn btn-outline-secondary">{{second.button_text.outline}}</button></div>
                  </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        <h3>{{subblock.title}}</h3>
                            <p>{{subblock.text}}</p>
                    <div><button class="btn btn-dark">{{subblock.button_text.solid}}</button></div>
                    <br>
                    <div><button class="btn btn-outline-dark">{{subblock.button_text.outline}}</button></div>
                     </div>
                  </div>
    {{/with}}
      </div>
     </div>
    <br>    
        <div class="card">
            <div class="card-body">
                <div class="display-1">
                {{#with nested_display}}
                    {{title}}
    <br>
    <br>      
                        <div class="card">
                            <div class="card-body">
                                <div class="display-4">
                                {{children_display.title}}
                                <p>{{children_display.text}}</p>
                                <button class="btn btn-outline-warning">{{children_display.button.text}}</button>
                                
                                </div>
                            </div>
                        </div>
                        
                           <p><h6>{{header_text}}</h6></p>
                           <button class="btn btn-info">{{button.text}}</button>
                           
                {{/with}}
                </div>
            </div>
        </div>
    <br>
         <div class="card">
             <div class="card-body">
                 <p><b>{{paragraph.title}}</b></p>
                 <p>{{paragraph.text}}</p>

                 <a href="{{paragraph.button.url}}" class="btn btn-link">
                     {{paragraph.button.text}}</a>
     <br>
     <br>
                    <div class="card">
                        <div class="card-body">
                            {{#each paragraph.list_name}}
                            <ul>
                                <li>
                                <a href="{{url}}" class="btn btn-link">
                                    {{text}}</a>
                                </li>
                            </ul>
                            {{/each}}
                        </div>
                    </div>

             </div>
         </div>   
      

       


     
</main>
{{!-- 
    Цей код містить лише те, що буде виводитись в <body>
    Адже наш layout/default.hbs має вже структуру HTML
--}}