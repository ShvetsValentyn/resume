<main>
    <div class="text-center">
        <h1>{{page_header.title}}</h1>
        <p class="text-center text-uppercase">{{page_header.description}}</p>
    </div>
    <section>
        {{#with section}}
        <div class="card">
             <div class="card-body">
                 <div class="display-6 text-end">{{about_us.title_list.main}}
                    <h2>{{about_us.title_list.sub}}</h2>
                 </div>
                 <button class="btn btn-outline-info">{{about_us.button.text}}</button>
             </div>
         </div>
         <br>
         <br>
            
         <div class="card">
             <div class="card-body">
                <div class="display-5">{{advantage.title}}</div>
         <br>
                 <div class="card">
                     <div class="card-body">
                        <div class="display-4 text-lowercase">{{advantage.efficiency.title}}</div>
                        <br>
                            <h6>{{advantage.efficiency.sub_title}}</h6>
                                <p>{{advantage.efficiency.description}}</p>
                                    <button class="btn btn-outline-warning">{{advantage.efficiency.button}}</button>
                     </div>
                </div>
         <br>
                <div class="card">
                    <div class="card-body">
                        <div class="display-4 text-center text-lowercase">{{advantage.innovation.title}}</div>
                        <br>
                        <h6 class="text-center">{{advantage.innovation.sub_title}}</h6>
                        <p class="text-center">{{advantage.innovation.description}}</p>
                        <button class="btn btn-outline-warning">{{advantage.innovation.button}}</button>
                    </div>
                </div>
         <br>
                <div class="card">
                    <div class="card-body">
                         <div class="display-4 text-end text-lowercase">{{advantage.innovation.title}}</div>
                        <br>
                        <h6 class="text-end">{{advantage.collaboration.sub_title}}</h6>
                        <p class="text-end">{{advantage.collaboration.description}}</p>
                        <button class="btn btn-outline-warning">{{advantage.collaboration.button}}</button>
                    </div>
                </div>
             </div>
         </div>
          <br>
          <br>
          <div class="card">
              <div class="card-body">
                  <div class="display-5">{{agreement.title}}</div>
        <br>
                  <div class="card">
                      <div class="card-body">
                          <h6>{{agreement.info.sub_title}}</h6>
        <br>
                          <div class="card">
                              <div class="card-body">
                                  <p>{{agreement.info.detail.text}}</p>
                                  <button class="btn btn-success">{{agreement.info.detail.button}}</button>
        <br>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        {{/with}}
    </section>
</main>

